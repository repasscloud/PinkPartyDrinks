@page "/other"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        
        @for (int i = 0; i < (otherDrinks.Length / 3); i++)
        {
            <div class="col-md-4">
                <a href="@otherDrinks[i, 1]">
                    <div class="card mb-3">
                        <img src="@otherDrinks[i, 2]" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-center">@otherDrinks[i, 0]</h5>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>

@code {
    private string PageTitle = "Other Drinks 🍹";

    private string[,] otherDrinks = new string[,]
    {
        { "Matterhorn", "/matterhorn", "img/matterhorn.png" },
        { "Piña Colada", "/pinacolada", "img/pinacolada.png" },
        { "Japanese Slipper", "/japaneseslipper", "img/japaneseslipper.png" },
    };
}
