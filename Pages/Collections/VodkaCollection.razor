@page "/vodka"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        
        @for (int i = 0; i < (vodkaDrinks.Length / 3); i++)
        {
            <div class="col-md-4">
                <a href="@vodkaDrinks[i, 1]">
                    <div class="card mb-3">
                        <img src="@vodkaDrinks[i, 2]" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-center">@vodkaDrinks[i, 0]</h5>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>

@code {

    private string PageTitle = "Vodka Drinks 🍶";
    private string[,] vodkaDrinks = new string[,]
    {
        { "Blue Lagoon", "/bluelagoon", "img/bluelagoon.png" },
        { "Cusco Club", "/cuscoclub", "img/cuscoclub.png" },
        { "Pink Dragon", "/pinkdragon", "img/pinkdragon.png" },
        { "Espresso Martini", "/espressomartini", "img/espressomartini.png" },
        { "Cherry Bomb", "/cherrybomb", "img/cherrybomb.png" },
        { "Succar Martini", "/succarmartini", "img/succarmartini.png" },
        { "Glitter Dream", "/glitterdream", "img/glitterdream.png" },
    };
}
