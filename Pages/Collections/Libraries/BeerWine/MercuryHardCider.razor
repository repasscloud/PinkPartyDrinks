@page "/mercuryhardcider"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
            <img src="@ImageUrl" class="img-fluid mx-auto d-block" alt="@PageTitle" />
        </div>
    </div>
</div>

@*Description*@
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <p>@Description</p>
        </div>
    </div>
</div>

@code {
    private string PageTitle = "Mercury Hard Cider";

    private string ImageUrl ="img/mercuryhardcider.png";

    private string Description = "A light golden colour, Mercury Hard Cider has an aroma that is fresh, yet delicate and subdued, with a lingering aroma of apples. Mercury Hard Cider is full flavoured, with a smooth lingering finish.";
}