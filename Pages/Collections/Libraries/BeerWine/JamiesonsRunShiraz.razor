@page "/jamiesonsrunshiraz"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
            <img src="@ImageUrl" class="img-fluid mx-auto d-block" alt="@PageTitle" />
        </div>
    </div>
</div>

@*Description*@
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <p>@Description</p>
        </div>
    </div>
</div>

@code {
    private string PageTitle = "Jamieson's Run Shiraz";

    private string ImageUrl = "img/jamiesonsrunshiraz.png";

    private string Description = "This unoaked Shiraz has juicy and dark berry character, balanced by supple tannins and bright acidity. It's a well-rounded and crowd-pleasing wine that pairs with tomato-based sauces and meaty meals.";
}