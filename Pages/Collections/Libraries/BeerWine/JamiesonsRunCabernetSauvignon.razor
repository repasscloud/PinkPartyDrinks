@page "/jamiesonsruncabsav"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
            <img src="@ImageUrl" class="img-fluid mx-auto d-block" alt="@PageTitle" />
        </div>
    </div>
</div>

@*Description*@
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <p>@Description</p>
        </div>
    </div>
</div>

@code {
    private string PageTitle = "Jamieson's Run Cabernet Sauvignon";

    private string ImageUrl = "img/jamiesonsruncabsav.png";

    private string Description = "This unoaked Cabernet Sauvignon has a dark fruit core, lifted by mint aromatics and a long, fresh finish. Supple and smooth, it's a wine to share at dinner with a variety of foods from Mediterranean dishes to roasted meats.";
}