@page "/discopink"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
            <img src="@ImageUrl" class="img-fluid mx-auto d-block" alt="@PageTitle" />
        </div>
    </div>
</div>

@*Description*@
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <p>@Description</p>
        </div>
    </div>
</div>


@*Barperson stuff*@
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <tbody>
                    @foreach (var row in ingredients)
                    {
                        <tr>
                            <td class="text-center">@row</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-8">
            <h6>Instructions:</h6>
            <ol>
                @foreach (string i in instructions)
                {
                    <li>@i</li>
                }
            </ol>
        </div>
    </div>
</div>


@code {
    private string PageTitle = "Disco Pink";

    private string ImageUrl = "img/discopink.png";

    private string Description = "Introducing the enchanting Disco Pink, a glamorous cocktail that will make your heart skip a beat. With its soft and delicate pink hue, this drink is the epitome of romance. Made with the perfect blend of tequila, gin, lime juice, lemon juice, and passionfruit syrup, the Disco Pink is the ultimate fruity delight that will tantalize your taste buds. The egg white adds a creamy texture to this already luscious drink, making it a true indulgence. As you sip on this beauty, you'll be transported to a world of pure bliss. So take a sip, close your eyes, and let the Disco Pink sweep you off your feet.";

    private string[] ingredients = new string[] {
        "1 oz Tequila",
        "1 oz Gin",
        "20 mL Lime Juice",
        "10 mL Lemon Juice",
        "1/2 oz Passionfruit Syrup",
        "Egg White",
        "Maraschino Cherry, for garnish"
    };

    private string[] instructions = new string[] {
        "Add tequila, gin, lime juice, lemon juice, passionfruit syrup, and egg white into a cocktail shaker filled with ice.",
        "Shake vigorously for 10-15 seconds until well combined and chilled.",
        "Strain the cocktail into a chilled glass.",
        "Garnish with a cherry.",
    };


}

