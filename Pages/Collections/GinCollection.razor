@page "/gin"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        
        @for (int i = 0; i < (ginDrinks.Length / 3); i++)
        {
            <div class="col-md-4">
                <a href="@ginDrinks[i, 1]">
                    <div class="card mb-3">
                        <img src="@ginDrinks[i, 2]" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-center">@ginDrinks[i, 0]</h5>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>

@code {
    private string PageTitle = "Gin Drinks 🥃";
    
    private string[,] ginDrinks = new string[,]
    {
        { "Basil Smash", "/basilsmash", "img/basilsmash.png" },
        { "Garden Delight", "/princesdock", "img/princesdock.png" },
        { "Juliet Romeo", "/thelady", "img/thelady.png" },
        { "London Cosmo", "/londoncosmo", "img/londoncosmo.png" },
        { "Prince's Dock", "/princesdock", "img/princesdock.png" },
        { "The Lady", "/thelady", "img/thelady.png" },
    };
}
