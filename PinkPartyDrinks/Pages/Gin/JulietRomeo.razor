@page "/julietromeo"

@using Microsoft.AspNetCore.Components

<PageTitle>@PageTitle</PageTitle>

@*Title and image*@
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@PageTitle</h1>
            <img src="@ImageUrl" class="img-fluid mx-auto d-block" alt="@PageTitle" />
        </div>
    </div>
</div>

@*Description*@
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <p>@Description</p>
        </div>
    </div>
</div>


@*Barperson stuff*@
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <tbody>
                    @foreach (var row in ingredients)
                    {
                        <tr>
                            <td class="text-center">@row</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-8">
            <h6>Instructions:</h6>
            <ol>
                @foreach (string i in instructions)
                {
                    <li>@i</li>
                }
            </ol>
        </div>
    </div>
</div>


@code {
    private string PageTitle = "Juliet & Romeo";

    private string ImageUrl = "img/julietromeo.png";

    private string Description = "Juliet & Romeo is a refreshing and aromatic gin-based cocktail that features the fresh and cool flavors of cucumber and mint, with a touch of floral sweetness from rose water. The addition of bitters and lime juice adds a complex and slightly bitter taste, while the pinch of salt balances out the sweetness of the simple syrup. Overall, it's a well-balanced and sophisticated cocktail that is perfect for any occasion.";

    private string[] ingredients = new string[] {
        "3 Dashes of Bitters",
        "1/2 oz Simple Syrup",
        "2 oz Gin",
        "Pinch of Salt",
        "4 Slices of Cucumber",
        "8-10 Mint Leaves",
        "1/4 oz Rose Water",
        "1/2 oz Lime Juice"
    };

    private string[] instructions = new string[] {
        "Muddle the cucumber slices, mint leaves, and pinch of salt in a shaker.",
        "Add bitters, simple syrup, gin, rose water, lime juice, and ice.",
        "Shake well and double strain into a chilled coupe glass.",
        "Garnish with a cucumber slice and a mint leaf."
    };
}
